# Discord Bot Configuration
# Your Discord bot token (required)
# Get this from https://discord.com/developers/applications
DBOT_DISCORD_TOKEN=your_discord_bot_token_here

# Path to monitor configuration file (optional, default shown)
# This JSON file defines which channels to monitor and where to send notifications
DBOT_MONITOR_CONFIG_PATH=./src/dbot/config_loader/config.json

# Redis connection URL (required)
# Format: redis://host:port or redis://host:port/db
DBOT_REDIS_URL=redis://localhost:6379

# Sentry DSN for error tracking (optional)
# Leave empty to disable Sentry integration
DBOT_SENTRY_DSN=

# Logging Configuration
# Available levels: DEBUG, INFO, WARNING, ERROR, CRITICAL
DBOT_LOGGING_LEVEL=INFO

# Monitoring and Observability
# Healthchecks.io webhook URL for uptime monitoring (optional)
# The bot will ping this URL after each successful processing cycle
DBOT_MONITORING_HEALTHCHECKSIO_WEBHOOK=

# Prometheus metrics configuration
# Enable/disable Prometheus metrics endpoint
DBOT_MONITORING_PROMETHEUS_METRICS_ENABLED=true

# Port for Prometheus metrics endpoint
DBOT_MONITORING_PROMETHEUS_METRICS_PORT=3333

# Host address for Prometheus metrics endpoint
# Use 0.0.0.0 to expose metrics externally, or 127.0.0.1 for local only
DBOT_MONITORING_PROMETHEUS_METRICS_HOST=0.0.0.0
